# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3001
NODE_ENV=development

# =============================================================================
# ATHENA API CONFIGURATION - UPDATE THESE WITH YOUR ACTUAL VALUES
# =============================================================================

# Athena API Base URL (choose based on your environment)
# For testing/sandbox: https://api.athenahealth.com  
# For production: https://api.athenahealth.com
ATHENA_BASE_URL=https://api.athenahealth.com

# Your Athena API Credentials (GET THESE FROM YOUR ATHENA DEVELOPER ACCOUNT)
ATHENA_CLIENT_ID=your_actual_client_id_here
ATHENA_CLIENT_SECRET=your_actual_client_secret_here
ATHENA_PRACTICE_ID=your_actual_practice_id_here

# Athena Environment
# Use 'preview1' for sandbox/testing
# Use 'api' for production
ATHENA_ENVIRONMENT=preview1

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Security (generate a random string for JWT if you plan to add authentication)
JWT_SECRET=your_random_jwt_secret_here

# Email Configuration (for appointment confirmations - optional for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Rate Limiting (optional - good defaults provided)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
